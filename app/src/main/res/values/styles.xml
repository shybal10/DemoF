<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontPath">fonts/ta/noto_sans_tamil/noto_sans_tamilui_bold.ttf</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:radioButtonStyle">@style/RadioButton</item>
        <item name="fontPath">fonts/ta/noto_sans_tamil/noto_sans_tamilui_bold.ttf</item>
    </style>

    <style name="RadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/radio</item>
    </style>

    <item name="blue1" type="color">#84cdc3</item>
    <item name="purple" type="color">#ed9730</item>
    <item name="green" type="color">#ed7c71</item>
    <item name="orange1" type="color">#224f75</item>
    <item name="red" type="color">#cb449b</item>
    <item name="darkblue" type="color">#ee91a4</item>
    <item name="darkpurple" type="color">#8dcc78</item>
    <item name="darkgreen" type="color">#d8b187</item>
    <item name="darkorange" type="color">#9374b6</item>
    <item name="darkred" type="color">#f8d350</item>

    <integer-array name="androidcolors">
        <item>@color/blue1</item>
        <item>@color/purple</item>
        <item>@color/green</item>
        <item>@color/orange1</item>
        <item>@color/red</item>
        <item>@color/darkblue</item>
        <item>@color/darkpurple</item>
        <item>@color/darkgreen</item>
        <item>@color/darkorange</item>
        <item>@color/darkred</item>
    </integer-array>
</resources>
