<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/bg2color"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".CartActivity">

    <!--App bar-->
    <RelativeLayout

        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/actionbarcolor">

        <TextView
            android:textSize="16.75sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:text="Cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">
            <ImageButton
                android:onClick="ReopenCart"
                android:background="@android:color/transparent"
                android:layout_gravity="center_vertical"
                android:id="@+id/cart_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/cart" />

            <ImageButton
                android:onClick="showMenu"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:id="@+id/menu_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/menu" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.75dp"
            android:layout_alignParentBottom="true"
            android:background="@color/orange">
        </View>
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_below="@+id/app_bar"
        android:layout_marginBottom="180dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--confirmed-->
            <android.support.v7.widget.CardView
                android:background="@color/white"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:card_view="http://schemas.android.com/tools"
                tool:cardCornerRadius="25dp"
                card_view:cardUseCompatPadding="true"
                card_view:elevation="25dp"
                xmlns:tool="http://schemas.android.com/apk/res-auto">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/confirmed_title"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_margin="2dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/tick"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:padding="2dp"
                                android:textStyle="bold"
                                android:textColor="@color/greencolor"
                                android:textSize="12sp"
                                android:text="Confirmed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <ImageButton
                            android:onClick="showInfoPopup"
                            android:id="@+id/confirmed_info_btn"
                            android:background="@android:color/transparent"
                            android:src="@drawable/help"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="15dp"
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <View
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="0.005dp"
                        android:background="@android:color/black"/>
                    <android.support.v7.widget.RecyclerView
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:id="@+id/confirmed_cart_rec_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!--pending confirmation-->
            <android.support.v7.widget.CardView
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:card_view="http://schemas.android.com/tools"
                tool:cardCornerRadius="25dp"
                card_view:cardUseCompatPadding="true"
                card_view:elevation="25dp"
                android:background="@color/white"
                xmlns:tool="http://schemas.android.com/apk/res-auto">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/confirmation_title"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_margin="2dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/warning"
                                android:textColor="@color/orangewarning"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:padding="2dp"
                                android:textStyle="bold"
                                android:textColor="@color/orangewarning"
                                android:textSize="12sp"
                                android:text="Pending Confirmation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <ImageButton
                            android:onClick="showInfoPopup"
                            android:background="@android:color/transparent"
                            android:src="@drawable/help"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="15dp"
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <View
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="0.005dp"
                        android:background="@android:color/black"/>
                    <android.support.v7.widget.RecyclerView
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:id="@+id/pending_cart_rec_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>

            </android.support.v7.widget.CardView>



        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--payment details-->
        <LinearLayout
            android:baselineAligned="false"
            android:background="@drawable/amt_bg"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text="Total Amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@color/blackbold"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:text="KD 480.000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:paddingTop="5dp"
                android:orientation="vertical"
                android:background="@drawable/amt_bg"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="@color/orangewarning"
                    android:text="To be Paid After Confirmation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginStart="5dp"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/blackbold"
                    android:text="KD 240.000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:background="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="0.005dp">
                </View>
                <TextView
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="@color/greencolor"
                    android:text="To be Paid Now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginStart="5dp"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/blackbold"
                    android:text="KD 240.000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <!--buttons-->
        <LinearLayout
            android:background="@color/actionbarcolor"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <Button
                android:layout_margin="10dp"
                android:id="@+id/continue_shopping_button"
                android:textSize="17sp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:text="Continue Shopping"
                android:background="@drawable/continueshoppingbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:layout_margin="10dp"
                android:id="@+id/checkout_button"
                android:textSize="17sp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:text="Checkout"
                android:background="@drawable/btnsml"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>