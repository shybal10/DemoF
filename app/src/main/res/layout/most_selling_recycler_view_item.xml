<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginEnd="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="325dp"
    android:layout_marginBottom="20dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="325dp"
        android:layout_height="200dp">
        <ImageView
            android:scaleType="fitXY"
            android:background="@drawable/services2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageButton
            android:layout_margin="15dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/heart"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:padding="15dp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:background="@drawable/display_shade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="5dp"
                android:textSize="11sp"
                android:textColor="@color/white"
                android:text="Starting From"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/before_price_text"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="KD 40.000"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textStyle="bold"
                android:textColor="@color/orange"
                android:text="KD 20.000"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="11sp"
                android:textColor="@color/white"
                android:text="Per Session"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1.2"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:textColor="@color/orange"
                android:textSize="17sp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:text="RealScience Show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="5dp"
                android:textSize="10sp"
                android:layout_marginStart="15dp"
                android:text="Salt and popcorn the perfect addition to the gathering"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_weight="0.8"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/shop_image"
                android:layout_centerVertical="true"
                android:src="@drawable/shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="12sp"
                android:layout_toEndOf="@+id/shop_image"
                android:layout_marginStart="5dp"
                android:text="Gyros Catering"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
