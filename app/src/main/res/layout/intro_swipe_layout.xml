<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">

    <TextView
        tools:ignore="MissingPrefix"
        fontPath="fonts/opensansbold.ttf"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="18.75sp"
        android:text="How festivity works"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/swipe_images"
        android:layout_marginTop="20dp"
        android:src="@drawable/intro1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:padding="5dp"
        tools:ignore="MissingPrefix"
        fontPath="fonts/opensansbold.ttf"
        android:textColor="@color/orange"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Pay Online"
        android:textSize="22sp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:padding="5dp"
        android:textColor="@color/introscreenblack"
        android:gravity="center"
        android:textSize="18sp"
        android:id="@+id/swipe_text_info"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:text="This is a test of the text that has to be written and not the actual text that will go into the application i am just writing more to see how long this can go onwithout causing any problems to the application"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>