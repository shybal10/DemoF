<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginBottom="15dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    tool:cardCornerRadius="25dp"
    card_view:cardUseCompatPadding="true"
    card_view:elevation="25dp"
    xmlns:tool="http://schemas.android.com/apk/res-auto">
        <LinearLayout
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    card_view:ignore="MissingPrefix"
                    fontPath="fonts/opensansbold.ttf"
                    android:id="@+id/birthday_package_text"
                    android:layout_alignParentStart="true"
                    android:textSize="17.75sp"
                    android:textStyle="bold"
                    android:textColor="@color/orange"
                    android:text="Birthday Package"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    card_view:ignore="MissingPrefix"
                    fontPath="fonts/opensansbold.ttf"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:layout_below="@+id/birthday_package_text"
                    android:layout_alignParentStart="true"
                    android:textSize="12sp"
                    android:textColor="@color/blackbold"
                    android:text="Option-A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/price_text_view"
                    fontPath="fonts/opensansbold.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="KD 500.000"
                    android:textColor="@color/blackbold"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    card_view:ignore="MissingPrefix" />
                <TextView
                    android:padding="5dp"
                    card_view:ignore="MissingPrefix"
                    fontPath="fonts/opensanssemibold.ttf"
                    android:layout_marginEnd="10dp"
                    android:layout_below="@+id/price_text_view"
                    android:layout_alignParentEnd="true"
                    android:textSize="12sp"
                    android:textColor="@color/blackbold"
                    android:text="Package Price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_height="0.005dp"/>
            <RelativeLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/black"
                    android:text="Package Include (8 services)"
                    android:textSize="13.75sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    card_view:ignore="MissingPrefix"
                    fontPath="fonts/opensanssemibold.ttf"
                    android:paddingTop="5dp"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:paddingBottom="5dp"
                    android:id="@+id/view_all_services_button"
                    android:layout_centerVertical="true"
                    android:textAllCaps="false"
                    android:background="@drawable/view_all_services_button"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:text="View all Services"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp" />
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="10dp"
                android:id="@+id/services_inside_packages_recycler_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
            <Button
                card_view:ignore="MissingPrefix"
                fontPath="fonts/opensanssemibold.ttf"
                android:layout_margin="5dp"
                android:textSize="17.75sp"
                android:textColor="@color/white"
                android:background="@drawable/btnbig"
                android:textAllCaps="false"
                android:text="Add to Cart"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
