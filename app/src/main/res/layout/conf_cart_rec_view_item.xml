<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginBottom="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--free delivery line-->
    <RelativeLayout
        android:id="@+id/free_deliver_layout"
        android:background="@color/bg1color"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_alignParentStart="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/edit_button"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_margin="2dp"
                    android:src="@drawable/edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="12sp"
                    android:text="Edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="8dp"
                android:id="@+id/delete_button"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_margin="2dp"
                    android:src="@drawable/remove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="12sp"
                    android:text="Remove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <!--free delivery-->
        <LinearLayout
            android:visibility="gone"
            android:layout_alignParentEnd="true"
            android:id="@+id/free_delivery"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_margin="2dp"
                android:src="@drawable/delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/greencolor"
                android:textSize="12sp"
                android:text="Free Delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!--paid delivery-->
        <LinearLayout
            android:layout_alignParentEnd="true"
            android:id="@+id/paid_delivery"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_margin="2dp"
                android:src="@drawable/delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/greencolor"
                android:textSize="12sp"
                android:text="Delivery Charge: 5.00 KD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/package_title"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/orange"
                android:text="Title needs to occupy two lines that is"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginEnd="2dp"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:text="From"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:text="Birthday Services"
                    android:textColor="@color/blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_marginEnd="2dp"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:text="Date:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:text="24 April, 2018"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_marginEnd="2dp"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:text="Timing:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:text="09:00 AM"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageButton
                android:background="@android:color/transparent"
                android:id="@+id/favourites_button"
                android:src="@drawable/heart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:gravity="center"
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginEnd="5dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="17sp"
                    android:text="KD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="17sp"
                    android:text="20.000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!--view details-->
            <LinearLayout
                android:id="@+id/view_details_layout"
                android:focusable="true"
                android:clickable="true"
                android:gravity="center"
                android:padding="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/viewdetail"
                    android:layout_marginEnd="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:text="View Details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <!--view details gridview-->
    <com.example.mawaqaamobile.festivity.UIutills.ViewDetailsGridView
        android:id="@+id/conf_cart_view_details_grid_view"
        android:verticalSpacing="15dp"
        android:layout_margin="10dp"
        android:numColumns="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.example.mawaqaamobile.festivity.UIutills.ViewDetailsGridView>

    <!--close Details-->
    <LinearLayout
        android:visibility="gone"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:id="@+id/close_view_detail_layout"
        android:focusable="true"
        android:clickable="true"
        android:gravity="end"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/viewdetailclose"
            android:layout_marginEnd="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:text="Close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>



</LinearLayout>